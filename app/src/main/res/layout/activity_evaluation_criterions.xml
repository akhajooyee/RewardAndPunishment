<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alirezakjy.rewardpunishment.EvaluationCriterionsActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add EvaluationCriterion"
        android:id="@+id/addEvaluationCriterionButton"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"/>
    <LinearLayout
        android:id="@+id/titleLinearLayout"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/addEvaluationCriterionButton"
        android:layout_margin="4dp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="65dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="operation"/>
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="type"
            android:textAlignment="center"/>
        <TextView
            android:textAlignment="center"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="name"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="410dp"
        android:id="@+id/EvaluationCriterionsRecyclerView"
        app:layout_constraintLeft_toLeftOf="@+id/titleLinearLayout"
        app:layout_constraintRight_toRightOf="@+id/titleLinearLayout"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/titleLinearLayout">


    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
